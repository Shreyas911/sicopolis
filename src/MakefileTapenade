$(info DISC_AND_GRL is $(DISC_AND_GRL))
endif
ifeq ($(DISC_AND_GRL),1)
$(info DISC_AND_GRL is $(DISC_AND_GRL))
$(info Domain is GRL, with discharge workers active.)
endif
endif

ifndef LISDIR
ifeq ($(F90C),gfortran)
LISDIR=/home/shreyas/lis-2.1.3/installation
endif
ifeq ($(F90C),ifort)
LISDIR=/home/shreyas/lis-2.1.3-intel/installation
endif
