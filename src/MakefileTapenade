CPPCMD_FILES = cat $< |  cpp -DRUN_SPECS_HEADER=\"sico_specs.h\" -imacros sico_specs.h ${DEFINE_FLAGS_ADJOINT} ${LISFLAG} -I${ADFirstAidKit_DIR} -traditional-cpp -P

ifeq ($(DISC_AND_GRL),0)
