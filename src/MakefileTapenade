ifeq ($(DISC_AND_GRL),1)
SRC_AD=globals_cpp.f90 sico_variables_m_cpp.f90 ice_material_properties_m_cpp.f90 ctrl_m_cpp.f90 enth_temp_omega_m_cpp.f90 stereo_proj_m_cpp.f90 read_m_cpp.f90 mask_update_sea_level_m_cpp.f90 pdd_m_cpp.f90 discharge_workers_m_cpp.f90 boundary_m_cpp.f90 init_temp_water_age_m_cpp.f90 calc_enhance_m_cpp.f90 flag_update_gf_gl_cf_m_cpp.f90 calc_vxy_m_cpp.f90 calc_vz_m_cpp.f90 calc_dxyz_m_cpp.f90 calc_temp_melt_bas_m_cpp.f90 output_m_cpp.f90 metric_m_cpp.f90 topograd_m_cpp.f90 calc_temp_m_cpp.f90 calc_temp_enth_m_cpp.f90 calc_gia_m_cpp.f90 calc_thk_m_cpp.f90 calc_bas_melt_m_cpp.f90 calc_thk_water_bas_m_cpp.f90 sico_init_m_cpp.f90 sico_main_loop_m_cpp.f90 sico_end_m_cpp.f90 numCore_cpp.f90

