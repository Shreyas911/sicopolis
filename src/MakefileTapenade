	$(CPPCMD_FILES) > dummy.f90
	cat dummy.f90 > $@
	sed -i 's/__NL__/\n/g' $@

%_cpp.f90: subroutines/${DOMAIN_SHORT}/%.F90
	$(CPPCMD_FILES) > dummy.f90
